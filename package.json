{
  "name": "eslint-config",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite --port 3000 --open",
    "build:prod": "run-p -l lint tp-c lint:fix prettier stylelint build",
    "build": "vite build",
    "preview": "vite preview",
    "lint:fix": "eslint --ignore-pattern dist/ . --fix",
    "lint": "eslint . --ignore-pattern dist/ . ",
    "prettier": "npx prettier . --write",
    "stylelint": "stylelint '*/*.scss' --fix",
    "tp-c": "tsc --noEmit ",
    "prebuild": "npm run tp-c",
    "tp-w": "tsc --watch",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@eslint/js": "^9.8.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.8.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "sass": "^1.77.8",
    "stylelint": "^16.7.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-standard": "^36.0.1",
    "tslib": "^2.6.3",
    "typescript-eslint": "^7.17.0",
    "vite": "^5.3.5",
    "vite-plugin-checker": "^0.7.2"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c tsc --noEmit --pretty",
      "eslint . --cache --ignore-pattern dist/ . --fix ",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,scss}": "stylelint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
